<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%- include('partials/head.ejs') %>
<body class="p1 text-center">
    <img src="/img/snocream-logo-transparent.png" class="logo"/>
    <h1>Administration Panel</h1>
    <h2>Menu Items</h2>
    <nav class="subpanel-nav">
        <a href="/admin/menu-items"><i class="fa fa-caret-left"></i> All Menu Items</a>
        <a>Logout <i class="fa fa-sign-out"></i></a>
    </nav>
    <div class="menu-item-details">
        <img src="/img/menu_items/<%= menuItem.image %>"/>
        <h3 class="menu-item-details__name"><%= menuItem.name %></h3>
        <p class="menu-item-details__desc"><%= menuItem.description %></p>
        <p class="menu-item-details__cat">Category: <%= menuItem.catName %></p>
        <form method="POST" id="del" action="/admin/menu-items/delete?_method=DELETE" style="margin:2rem 0;">
            <input type="hidden" name="itemId" value="<%= menuItem.id %>">
            <button type="submit" id="delSubbut" class="btn btn--danger btn--block">Delete</button>
        </form>
    </div>
    <script>
        document.querySelector('#delSubbut').addEventListener('click', e => {
            e.preventDefault();

            const confirmDel = confirm('Are you sure you want to delete this menu item?');

            if(!confirmDel) return;

            document.querySelector('#del').submit();

            
        });
    </script>
</body>
</html>